{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "workers/**/*"
  ]
}
