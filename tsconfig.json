{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["src/workers/**/*"]
}
