{
  "compilerOptions": {
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "baseUrl": ".",
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "workers/**/*"
  ]
}
